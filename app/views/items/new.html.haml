= form_with model: @item,local: true do |f|
  .field
    = f.label :商品名
    %span.field__required 必須
    = f.text_field :name
  .field
  = f.label :商品の説明
  %span.field__required 必須
  = f.text_field :text
  .field
  = f.label :カテゴリ
  %span.field__required 必須
  -# = f.select :category, [''], {include_blank: 'カテゴリ'}, class: 'category'
  = f.collection_select :category_ids, @parents, :id, :name,{prompt: "---"}, class: "select-default", id: "parent-form", name: 'item[category_ids][]'
  .field
  = f.label :ブランド
  %span.field__required 任意
  = f.text_field :brand
  .field
  = f.label :商品の状態
  %span.field__required 必須
  = f.select :condition, [''], {include_blank: '選択してください'}, class: 'condition'
  .field
  = f.label :配送料の負担
  %span.field__required 必須
  = f.select :postage, [''], {include_blank: '選択してください'}, class: 'postage'
  .field
  = f.label :発送元の地域
  %span.field__required 必須
  = f.select :region, [''], {include_blank: '選択してください'}, class: 'region'
  .field
  = f.label :発送までの日数
  %span.field__required 必須
  = f.select :shipping_date, [''], {include_blank: '選択してください'}, class: 'shipping_date'
  .field
  = f.label :販売価格
  %span.field__required 必須
  = f.text_field :price
  .actions
    = f.submit "出品する", class: "actions__submit"



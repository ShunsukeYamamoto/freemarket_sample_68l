.header
  .header__logo
    = link_to '#' do
      = image_tag 'logo.png', class: "header__logo--image"
.main
  .main__contents
    .main__contents__login-no-acount
      アカウントをお持ちでない方はこちらから
      = link_to "https://www.facebook.com/", class: "main__contents__btn main__contents__btn--no-acount" do
        新規会員登録
    .main__contents__form-inner
      = link_to "https://www.facebook.com/", class: "main__contents__btn main__contents__btn--facebook" do
        = icon('fab', 'facebook-square', class: "main__contents__btn--icon")
        Facebookでログイン
        %span<>
      = link_to "#", class: "main__contents__btn main__contents__btn--google" do
        = icon('fab', 'google', class: "main__contents__btn--icon")
        Googleでログイン
        %span<>
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "field__input", placeholder: 'メールアドレス'
      .field
        %br/
        = f.password_field :password, autocomplete: "current-password", class: "field__input", placeholder: 'パスワード'
      .actions
        = f.submit "ログイン", class: "actions__submit-login"
      = render "devise/shared/links"





